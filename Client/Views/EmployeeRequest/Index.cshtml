@{
    ViewData["Title"] = "Employee Request";
    Layout = "_AdminLayout";
}

<section class="section">
    <div class="section-header d-flex justify-content-center shadow">
        <h1>Employee Request</h1>
    </div>
    <div class="section-body">
        <h4>Notification</h4>
        <div id="cardNotification">
        </div>
    </div>
</section>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="detailModalRequest">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Detail Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="respon" class="needs-validation" novalidate>
                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="nik">NIK: </label>
                            <input type="text" class="form-control" id="nikModal" value="" readonly>
                        </div>
                        <div class="col-md mb-3">
                            <label for="requestID">Request ID: </label>
                            <input type="text" class="form-control" id="requestID" value="" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="fullname">Fullname: </label>
                            <input type="text" class="form-control" id="fullNameModal" value="" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="date">Date: </label>
                            <input type="date" class="form-control" id="dateModal" value="" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md mb-3">
                            <label for="startTime">Start Time: </label>
                            <input type="time" class="form-control" id="startTimeModal" value="" readonly>
                        </div>
                        <div class="col-md mb-3">
                            <label for="endTime">End Time: </label>
                            <input type="time" class="form-control" id="endTimeModal" value="" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="note">Job Note: </label>
                            <textarea type="text" class="form-control" id="noteModal" value="Test" readonly></textarea>
                        </div>
                    </div>
                </form>
                    <div class="d-inline-block mt-3">
                        <button id="acceptRequest" class="btn btn-success ml-2" type="button" onclick="acceptRequest()"> Accept</button>
                        <button id="rejectRequest" class="btn btn-danger ml-2" type="button" onclick="rejectRequest()"> Reject</button>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Manager.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}
